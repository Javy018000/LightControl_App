<!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#2F5D50"
                android:centerColor="#1B3A34"
                android:endColor="#2F5D50"
                android:angle="0"
                android:type="linear"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#2F5D50"/>
            <padding android:bottom="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1B3A34"
                android:centerColor="#2F5D50"
                android:endColor="#1B3A34"
                android:angle="45"
                android:type="linear"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#2F5D50"/>
            <padding android:bottom="8dp"/>
        </shape>
    </item>
</selector>
